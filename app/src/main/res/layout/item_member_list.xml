<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorBackground"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/member_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/member_name"
        android:text="Nguyễn Hữu Xuân"
        android:layout_marginStart="20dp"
        android:visibility="visible"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorText2"
        app:layout_constraintStart_toEndOf="@id/member_avatar"
        app:layout_constraintTop_toTopOf="@id/member_avatar"
        app:layout_constraintBottom_toBottomOf="@id/member_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layoutOwner"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/member_avatar"
        app:layout_constraintTop_toTopOf="@id/member_avatar"
        app:layout_constraintBottom_toBottomOf="@id/member_avatar"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/owner_name"
            android:text="Nguyễn Hữu Xuân"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtRole"
            android:text="@string/owner"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_rectangle_radius"
            android:backgroundTint="@color/paleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/member_avatar"
        app:layout_constraintBottom_toBottomOf="@id/member_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgProfile"
            android:src="@drawable/ic_profile"
            app:tint="?attr/colorBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>