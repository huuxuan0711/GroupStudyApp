<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.GroupActivity">

    <LinearLayout
        android:id="@+id/backLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:tint="@color/blue"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groups"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/backLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_info"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="?attr/colorCardView2"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img1"
                        android:src="@drawable/ic_next"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/blue"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/group_image"
                        android:layout_marginTop="24dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView2"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <TextView
                        android:id="@+id/group_name"
                        app:layout_constraintStart_toEndOf="@id/group_image"
                        app:layout_constraintEnd_toStartOf="@id/img1"
                        app:layout_constraintTop_toTopOf="@id/group_image"
                        android:text="Hương Ngải"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="?attr/colorText2"
                        android:layout_marginStart="14dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/group_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Study"
                        android:textSize="18sp"
                        android:textColor="?attr/colorText2"
                        app:layout_constraintStart_toStartOf="@id/group_name"
                        app:layout_constraintTop_toBottomOf="@id/group_name" />

                    <TextView
                        android:id="@+id/txt1"
                        android:text="  -  "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorText2"
                        app:layout_constraintStart_toEndOf="@id/group_category"
                        app:layout_constraintTop_toBottomOf="@id/group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/group_size"
                        android:text="20"
                        android:textSize="18sp"
                        android:textColor="?attr/colorText2"
                        app:layout_constraintStart_toEndOf="@id/txt1"
                        app:layout_constraintTop_toBottomOf="@id/group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/members"
                        android:textSize="18sp"
                        android:textColor="?attr/colorText2"
                        app:layout_constraintStart_toEndOf="@id/group_size"
                        app:layout_constraintTop_toBottomOf="@id/group_name" />

                    <ImageView
                        android:src="@drawable/ic_member"
                        app:tint="@color/blue"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/txt2"
                        app:layout_constraintTop_toBottomOf="@id/group_name"
                        app:layout_constraintBottom_toBottomOf="@id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/group_slogan"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textColor="@color/blue"
                        android:textStyle="italic"
                        android:text="Tao là bố của chúng mày"
                        app:layout_constraintTop_toBottomOf="@id/group_image"
                        app:layout_constraintStart_toStartOf="@id/group_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNav"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/card_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewNav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutChat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="@string/enter_message"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/btnSend"
            app:layout_constraintEnd_toStartOf="@id/btnSend"
            app:layout_constraintStart_toEndOf="@id/btnAttach"
            app:layout_constraintTop_toTopOf="@id/btnSend"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorBtn" />

        <ImageView
            android:id="@+id/btnAttach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_attach"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>